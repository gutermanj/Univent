
<div class="text-center">
<h1>Sign Up</h1>
  <%= form_for [@user] do |f| %>
    <%= f.label 'username' %> <br> <%= f.text_field 'username', :style => 'width: 20%;', :required => 'true' %> </p>
    <%= f.label 'email' %> <br> <%= f.text_field 'email', :style => 'width: 20%;', :required => 'true' %> </p>
